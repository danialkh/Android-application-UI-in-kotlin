<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:layoutDirection="ltr"
    android:background="@drawable/vc_transparent_back_bottomsheet"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/shadow_botomShape"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginBottom="114dp"

        app:layout_constraintBottom_toBottomOf="@+id/img_back_bottomShape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vc_shadow_bottomsheet" />

    <ImageView
        android:id="@+id/img_bottomsheet_stroke"
        android:layout_width="0dp"
        android:layout_height="133dp"
        android:layout_marginBottom="1px"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_bottomShape"
        app:layout_constraintEnd_toEndOf="@+id/img_back_bottomShape"
        app:layout_constraintStart_toStartOf="@+id/img_back_bottomShape"
        app:srcCompat="@drawable/vc_bottomsheet_stroke"

        />

    <ImageView
        android:id="@+id/img_back_bottomShape"
        android:layout_width="0dp"
        android:layout_height="133dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vc_back_bottomsheet" />

    <ImageView
        android:id="@+id/img_takhtBottomShape"
        android:layout_width="70dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_back_bottomShape"
        app:srcCompat="@drawable/vc_bottomsheet_takht" />

    <ImageView
        android:id="@+id/img_sarresid1"
        android:layout_width="35dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_sarresid2"
        app:layout_constraintEnd_toStartOf="@+id/img_sarresid2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_sarresid2"
        app:srcCompat="@drawable/vc_sarresid" />

    <ImageView
        android:id="@+id/img_sarresid2"
        android:layout_width="35dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_sarresid3"
        app:layout_constraintEnd_toStartOf="@+id/img_sarresid3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_sarresid1"
        app:layout_constraintTop_toTopOf="@+id/img_sarresid3"
        app:srcCompat="@drawable/vc_sarresid" />

    <ImageView
        android:id="@+id/img_sarresid3"
        android:layout_width="35dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_sarresid4"
        app:layout_constraintEnd_toStartOf="@+id/img_sarresid4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_sarresid2"
        app:layout_constraintTop_toTopOf="@+id/img_sarresid4"
        app:srcCompat="@drawable/vc_sarresid" />

    <ImageView
        android:id="@+id/img_sarresid4"
        android:layout_width="35dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_sarresid5"
        app:layout_constraintEnd_toStartOf="@+id/img_sarresid5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_sarresid3"
        app:layout_constraintTop_toTopOf="@+id/img_sarresid5"
        app:srcCompat="@drawable/vc_sarresid" />

    <ImageView
        android:id="@+id/img_sarresid5"
        android:layout_width="35dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_sarresid6"
        app:layout_constraintEnd_toStartOf="@+id/img_sarresid6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_sarresid4"
        app:layout_constraintTop_toTopOf="@+id/img_sarresid6"
        app:srcCompat="@drawable/vc_sarresid" />

    <ImageView
        android:id="@+id/img_sarresid6"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_sarresid5"
        app:srcCompat="@drawable/vc_sarresid" />

    <TextView
        android:id="@+id/bottomSheet_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="همه"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomSheet_label2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottomSheet_label2"
        app:layout_constraintTop_toTopOf="@+id/bottomSheet_label2" />

    <TextView
        android:id="@+id/bottomSheet_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="آخرین"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomSheet_label3"
        app:layout_constraintEnd_toStartOf="@+id/bottomSheet_label1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottomSheet_label3"
        app:layout_constraintTop_toTopOf="@+id/bottomSheet_label3" />

    <TextView
        android:id="@+id/bottomSheet_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="تاریخ"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomSheet_label4"
        app:layout_constraintEnd_toStartOf="@+id/bottomSheet_label2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottomSheet_label4"
        app:layout_constraintTop_toTopOf="@+id/bottomSheet_label4" />

    <TextView
        android:id="@+id/bottomSheet_label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="هشتک"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomSheet_label5"
        app:layout_constraintEnd_toStartOf="@+id/bottomSheet_label3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottomSheet_label5"
        app:layout_constraintTop_toTopOf="@+id/bottomSheet_label5" />

    <TextView
        android:id="@+id/bottomSheet_label5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="سررسید"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        app:layout_constraintEnd_toStartOf="@+id/bottomSheet_label4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_back_bottomShape" />

    <ImageView
        android:id="@+id/img_selected_label"
        android:layout_width="50dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="@+id/bottomSheet_label5"
        app:layout_constraintStart_toStartOf="@+id/bottomSheet_label5"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheet_label5"
        app:srcCompat="@drawable/vc_selected_label_shower" />

</androidx.constraintlayout.widget.ConstraintLayout>